<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="D20230912.mybatis.mapper.UserMapper">
    <sql id="select-name">
id as class_id,title,creator,</sql>
<!--    把数据库中的id对应class中的class_id，sql种元素要写全-->
    <select id="tableinfo" resultMap="RuseltMape">
<!--<include refid="select-name"/>-->
        select *
        from blog_table
        where id = #{id}
    </select>
    <select id="searchBlog" resultType="User">
        select *
        from blog_table
        <where>
            <if test="title != '' and title != null">
                and title LIKE #{title}
            </if>
            <if test="creator != '' and creator != null">
                and creator LIKE #{creator}
            </if>
        </where>
    </select>

    <insert id="addUser" useGeneratedKeys="true" >
        insert into user (username,email, account, password)
        values (#{username},#{email}, #{account} ,#{password})
    </insert>


    <update id="updateUser">
        update user
        <set>
            <if test="email != null and email !=''">
                 email = #{email},
            </if>
            <if test="password != null and password !=''">
                password = #{password},
            </if>
            <if test="account != null and account !=''">
                account = #{account},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteUser">
        delete
        from user
        where id = #{id}
    </delete>
